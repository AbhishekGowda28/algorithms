{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@App/*": [
        "src/*"
      ],
      "lib/*": [
        "out/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}